# SkillScreen Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================
# Gemini API Key (required)
GEMINI_API_KEY=AIzaSyAR8QK4VKXWkcWUv399pvQ5BOcIJ0qZxTw

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Debug mode (true/false)
DEBUG=false

# Environment (development/staging/production)
ENVIRONMENT=development

# Application version
VERSION=1.0.0

# =============================================================================
# INTERVIEW CONFIGURATION
# =============================================================================
# Maximum number of questions in an interview
MAX_QUESTIONS=10

# Minimum number of questions in an interview
MIN_QUESTIONS=5

# Threshold for detecting off-topic responses (0.0 to 1.0)
OFF_TOPIC_THRESHOLD=0.3

# Maximum number of off-topic responses before ending interview
MAX_OFF_TOPIC_RESPONSES=3

# Default interview type (technical/behavioral/mixed)
DEFAULT_INTERVIEW_TYPE=mixed

# Default difficulty level (easy/medium/hard)
DEFAULT_DIFFICULTY=medium

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# LLM model name
LLM_MODEL_NAME=gemini-pro

# LLM temperature (0.0 to 1.0)
LLM_TEMPERATURE=0.7

# Maximum tokens for LLM responses
LLM_MAX_TOKENS=200

# LLM request timeout in seconds
LLM_TIMEOUT=30

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Streamlit server port
STREAMLIT_SERVER_PORT=8501

# Streamlit server address
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# UI theme (light/dark)
UI_THEME=light

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/skillscreen.log

# Maximum log file size (e.g., 10MB, 50MB)
MAX_LOG_SIZE=10MB

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for session management
SECRET_KEY=your_secret_key_here

# Session timeout in seconds (3600 = 1 hour)
SESSION_TIMEOUT=3600

# Maximum number of concurrent sessions
MAX_SESSIONS=100

# Enable encryption for sensitive data (true/false)
ENABLE_ENCRYPTION=true

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================
# Database URL (if using database)
# DATABASE_URL=postgresql://user:password@localhost:5432/skillscreen

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Redis URL (if using Redis for caching)
# REDIS_URL=redis://localhost:6379

# S3 Bucket (if using S3 for file storage)
# S3_BUCKET=skillscreen-storage
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1