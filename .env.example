# SkillScreen Backend Services Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=ai_interview_platform_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:password@postgres:5432/ai_interview_platform_dev

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-secret-key-change-in-production-please-use-a-strong-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# SERVICE PORTS
# =============================================================================
API_GATEWAY_PORT=5000
USER_SERVICE_PORT=5001
AUTH_SERVICE_PORT=5002
INTERVIEW_SERVICE_PORT=5003
MEDIA_SERVICE_PORT=5004
VIDEO_AI_SERVICE_PORT=5005
AUDIO_AI_SERVICE_PORT=5006
TEXT_AI_SERVICE_PORT=5007
ASSESSMENT_SERVICE_PORT=5008
CODING_SERVICE_PORT=5009
LOGGER_SERVICE_PORT=5010
NOTIFICATION_SERVICE_PORT=5011

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# OpenAI API (if using real AI services)
OPENAI_API_KEY=your-openai-api-key-here

# Azure Cognitive Services (if using Azure AI)
AZURE_COGNITIVE_KEY=your-azure-cognitive-key-here
AZURE_COGNITIVE_ENDPOINT=your-azure-cognitive-endpoint-here

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@skillscreen.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=100MB
ALLOWED_FILE_TYPES=txt,pdf,png,jpg,jpeg,gif,mp4,mp3,wav
STORAGE_PATH=/app/storage

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs
ELASTICSEARCH_URL=http://elasticsearch:9200
KIBANA_URL=http://kibana:5601

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# GitHub (for code repository integration)
GITHUB_TOKEN=your-github-token

# LinkedIn (for profile integration)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable hot reloading
HOT_RELOAD=true

# Set to true to enable debug mode
FLASK_DEBUG=true

# Set to true to enable CORS for development
CORS_ENABLED=true
